<Window x:Class="TextTool.Wpf.Library.Controls.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:TextTool.Wpf.Library.Controls"
        xmlns:libcm="clr-namespace:TextTool.Library.ComponentModel;assembly=TextTool.Library"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        MinHeight="250" MaxWidth="600">
    <!--<Window.Resources>
        <libcm:MessageViewModel x:Key="VM"/>
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource VM}"/>
    </Window.DataContext>-->
    <Grid Margin="20">
        <DockPanel>
            
            <DockPanel DockPanel.Dock="Bottom">
                <Button Content="No to All" DockPanel.Dock="Right" HorizontalAlignment="Right" Padding="3" Width="100" Margin="10" 
                        Click="OnClickNoToAll"/>
                <Button Content="No" DockPanel.Dock="Right" HorizontalAlignment="Right" Padding="3" Width="100" Margin="10" 
                        Click="OnClickNo"/>
                <Button Content="Yes to All" DockPanel.Dock="Right" HorizontalAlignment="Right" Padding="3" Width="100" Margin="10" 
                        Click="OnClickYesToAll"/>
                <Button Content="Yes" DockPanel.Dock="Right" HorizontalAlignment="Right" Padding="3" Width="100" Margin="10" 
                        Click="OnClickYes"/>
            </DockPanel>
            <TextBlock DockPanel.Dock="Top" Margin="0,0,0,10" HorizontalAlignment="Stretch" 
                       Text="{Binding Message, RelativeSource={RelativeSource AncestorType=controls:MessageWindow}}" TextWrapping="Wrap"/>
        </DockPanel>
    </Grid>
</Window>

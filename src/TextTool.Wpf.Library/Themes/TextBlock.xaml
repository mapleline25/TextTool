<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converter="clr-namespace:TextTool.Wpf.Library.Converters">

    <!-- TextBlock Style -->
    <Style x:Key="ListViewTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="ToolTip">
            <Setter.Value>
                <MultiBinding Mode="OneWay" Converter="{converter:ToolTipConverter}">
                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource Self}" IsAsync="True"/>
                    <Binding RelativeSource="{RelativeSource Self}" IsAsync="True"/>
                </MultiBinding>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- DragSelector Border Style -->
    <Style x:Key="DragSelectorStyle" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="{StaticResource DragSelector.BorderBrush}"/>
        <Setter Property="Background" Value="{StaticResource DragSelector.Background}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

</ResourceDictionary>